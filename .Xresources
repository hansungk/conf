! Xft resources --------------------------------------------------------------
! WILL be overrided by fonts.conf
Xft.dpi:		96
Xft.antialias:	true
Xft.rgba:		rgb
Xft.hinting:	true
Xft.hintstyle:	hintslight
Xft.lcdfilter:	lcddefault

! Colors ---------------------------------------------------------------------
#include "/home/stephen/.colors/solarized.xresources"
! Appearances ----------------------------------------------------------------
URxvt.scrollBar: false
URxvt.intensityStyles: false
!URxvt.transparent: true
!URxvt.shading: 20
!URxvt.blurRadius: 30
!URxvt.fading: 30
!URxvt.internalBorder: 10

! Fonts ----------------------------------------------------------------------
! Bitmap font
!URxvt.font: -*-terminus-medium-r-normal--14-*-*-*-*-*-*-*,-*-stlarch-*-*-normal-*-*-*-*-*-*-*-*-*,xft:NanumGothicCoding:pixelsize=13
!URxvt.boldFont: -*-proggyclean-*-r-normal--13-*-*-*-*-*-*-*
!URxvt.font: -*-proggytiny-medium-r-normal--10-*-*-*-*-*-*-*
!URxvt.boldFont: -*-proggytiny-*-*-*--10-*-*-*-*-*-*-*
! Truetype font
URxvt.font: xft:Inconsolata:size=11,xft:NanumGothicCoding:size=11
URxvt.letterSpace: -1

! Input method ---------------------------------------------------------------
URxvt*.inputMethod: ibus
URxvt*.preeditType: OverTheSpot
URxvt*.imLocale: ko_KR.UTF-8
