! Xft resources --------------------------------------------------------------
! WILL be overrided by fonts.conf
Xft.dpi:		96
Xft.antialias:	true
Xft.rgba:		rgb
Xft.hinting:	true
Xft.hintstyle:	hintslight

! terminal colors ------------------------------------------------------------
#include "/home/stephen/.colors/xdotshare.xresources"
!URxvt*background: #002b36

! urxvt configurations -------------------------------------------------------
URxvt.scrollBar: false
! For PC
URxvt.font: -*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*,-*-stlarch-*-*-normal-*-*-*-*-*-*-*-*-*,-*-nanumgothic-medium-r-normal-*-12-*-*-*-*-*-*-*
! For rMBP
!URxvt.font: xft:Inconsolata:size=10
!URxvt.letterSpace: -1
URxvt*.depth: 24

!URxvt.transparent: true
!URxvt.shading: 20
!URxvt.blurRadius: 30
!URxvt.fading: 30
!URxvt.internalBorder: 15
!
URxvt*.inputMethod: ibus
URxvt*.preeditType: OverTheSpot
URxvt*.imLocale: ko_KR.UTF-8
