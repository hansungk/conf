" vim:ft=vim

" Essential ----------------------------------
echo "Welcome to Vimperator!"
set defsearch=google
set hintchars=asdfghjklqwertyuiopzxcvbnm

" GUI ----------------------------------------
set gui=nonavigation
set defsearch=google
set hintchars=hjklasdfqwertyuiopzxcvbnm


" Key bindings -------------------------------
nnoremap ; :
nnoremap : ;
nnoremap <BS> H

command reloadrc source /Users/stephen/.vimperatorrc

" Tab switcher
"nmap K gT
"nmap J gt

nnoremap <C-S-h> :tabm -1<Esc>
nnoremap <C-S-l> :tabm +1<Esc>

" Scroll steps
nnoremap j 5j
nnoremap k 5k
nnoremap h 5h
nnoremap l 5l

" Clear search
nnoremap <Leader>/ <Esc>:noh<CR>

" Open downloads
nnoremap <C-j> :downloads<CR>

" Misc ---------------------------------------
" Send one <Esc> to be in normal mode
normal <Esc>
