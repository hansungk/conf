### Keys
unbind C-b
set -g prefix C-q
bind-key P swap-window -t -1
bind-key N swap-window -t +1
unbind r
bind r source-file ~/.tmux.conf

### Status Bar

set -g status-interval 15 # statusbar update interval
set -g status-bg colour234
set -g status-fg white
set -g status-justify centre # center allign window list

# Left side of status bar
set -g status-left-length 25
set -g status-left-bg colour238 #grey
set -g status-left '  #[bold]#S  '

# Right side of status bar
set -g status-right '#[bg=colour236] #(date +%m.%d) #[bold]#(date +%H:%M) '

### Window lists

# Inactive windows in status bar
set-window-option -g window-status-format '#[bg=] #I:#W#F '

# Current or active window in status bar
set-window-option -g window-status-current-format '#[fg=green] (#[reset]#I:#W#F) '

### Usability

#set -g default-terminal "screen-256color-bce"
set -g default-terminal "screen-256color"
set -s escape-time 0 # Eliminates vim ESC delay issue
setw -g mode-keys vi # Use vim keybindings in copy mode

# Mac OS X pbpaste/pbcopy support
set-option -g default-command "reattach-to-user-namespace -l zsh"
bind-key -t vi-copy v begin-selection
bind-key -t vi-copy y copy-pipe "reattach-to-user-namespace pbcopy"
# Update default binding of `Enter` to also use copy-pipe
unbind -t vi-copy Enter
bind-key -t vi-copy Enter copy-pipe "reattach-to-user-namespace pbcopy"

### Startup
#new-session Main
#new-window -n one
#new-window -n root -c /root 'sudo -i'
new -s Main -d

select-window -t 0
