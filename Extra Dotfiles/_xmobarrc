Config { font = "xft:tamsyn:size=12"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 100
       , commands = [ Run Weather "RKSS" ["-t","<tempC>C","-L","10","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Cpu ["-t", "CPU:<total>%", "-L","3","-H","15","--normal","green","--high","red"] 10
                    , Run Memory ["-t","MEM:<usedratio>%"] 10
					, Run CoreTemp ["-t", "TEMP:<core0>C", "-L", "40", "-H", "60", "--normal","green","--high","red","--low","lightblue"] 50
					, Run Network "wlp7s0" ["-t", "<dev>:<rx>K|<tx>K", "-L","0","-H","1000","--normal","green","--high","red"] 10
					, Run DiskIO [("/", "HDD:<read>|<write>")] [] 10
					, Run BatteryP ["BAT0"] ["-t", "<acstatus>,<left>%"] 300
                    , Run Date "%a, %b %_d %l:%M" "date" 10
					, Run Com "whoami" [] "" 0
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | %coretemp% | %wlp7s0% | %diskio% | %battery%    %RKSS% <fc=#ee9a00>%date%</fc> %whoami% "
       }
