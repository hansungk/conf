# -- Application launchers ----------------------------------
"firefox"
    Mod4 + shift + f
# -----------------------------------------------------------

# -- Volume management --------------------------------------
"amixer set Master 5%+ unmute"
    XF86AudioRaiseVolume

"amixer set Master 5%- unmute"
    XF86AudioLowerVolume

"amixer set Master toggle"
    XF86AudioMute
# -----------------------------------------------------------

# -- MPD management -----------------------------------------
"mpc toggle"
    XF86AudioPlay

"mpc stop"
    XF86AudioStop

"mpc prev"
    XF86AudioPrev

"mpc next"
    XF86AudioNext
# -----------------------------------------------------------

# -- Desktop control ----------------------------------------
"xtrlock"
    control + mod1 + l
# ----------------------------------------------------------- 

