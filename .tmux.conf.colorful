### Keys
unbind C-b
set -g prefix C-a
bind-key P swap-window -t -1
bind-key N swap-window -t +1
unbind r
bind r source-file ~/.tmux.conf


### Status Bar
set -g status-interval 15 # statusbar update interval
set -g status-bg colour233
set -g status-fg white
set -g status-justify centre # center allign window list

set -g status-left-length 25
set -g status-left-bg colour235 #orange
set -g status-left '  #[bold]#S  '

set -g status-right '#[bg=colour234] #(date +%m.%d) #[bg=colour235,bold] #(date +%H:%M) '


### Window lists
set-window-option -g window-status-format '#[bg=colour32,bold] #I #[bg=colour233] #W '
set-window-option -g window-status-current-format '#[bg=colour32,bold] #I #[fg=colour236,bg=colour15,bold] #W '


### Panes
set -g pane-border-fg white
set -g pane-active-border-fg white

### Usability
set -g default-terminal "screen-256color"
set -s escape-time 0 # Eliminates vim ESC delay issue
setw -g mode-keys vi # Use vim keybindings in copy mode


